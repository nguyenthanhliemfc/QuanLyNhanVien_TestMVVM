<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuanLyNhanVien.View.ThemNhanVienView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Margin="5">
            <Label Text="Thêm nhân viên!" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Họ và Tên:"/>
            <Entry Text="{Binding HoVaTen, Mode=OneWayToSource}"/>
            <Label Text="Tuổi:"/>
            <Entry Text="{Binding Tuoi, Mode=OneWayToSource}" />
            <Label Text="Địa chỉ:"/>
            <Entry Text="{Binding DiaChi, Mode=OneWayToSource}" />
            <Button Text="Thêm" CornerRadius="25" BackgroundColor="Blue" TextColor="White" Command="{Binding Them}"/>
            <Button Text="Đóng" CornerRadius="25" BackgroundColor="Blue" TextColor="White" Command="{Binding Dong}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>